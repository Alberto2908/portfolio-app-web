{
  "buildCommand": "npm ci && npx ng build --configuration=production --verbose",
  "outputDirectory": "dist/app-web/browser",
  "framework": "angular",
  "installCommand": "npm ci",
  "git": {
    "deploymentEnabled": {
      "main": false,
      "production": true,
      "develop": false
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
